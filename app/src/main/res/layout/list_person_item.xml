<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstProfileItem_img_photo"
        android:src="@drawable/lst_profile_icon"
        android:background="#ffbcbcbc" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/personItem_ltext_left_offset"
        android:layout_marginRight="@dimen/personItem_rtext_right_offset">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name"
            android:id="@+id/lstProfileItem_name"
            android:layout_marginTop="@dimen/personItem_text_bottom_offset"
            android:layout_weight="1"
            android:textColor="@color/text_gray"
            android:textSize="17dp"
            android:ellipsize="end"
            android:maxLines="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Description1"
                android:id="@+id/lstProfileItem_desc1"
                android:textSize="14dp"
                android:layout_weight="1.3"
                android:textColor="@color/text_gray"
                android:paddingRight="@dimen/personItem_ltext_right_offset"
                android:paddingBottom="@dimen/personItem_text_bottom_offset"
                android:gravity="bottom"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Description2"
                android:id="@+id/lstProfileItem_desc2"
                android:textSize="14dp"
                android:layout_weight="1"
                android:textColor="@color/text_gray"
                android:gravity="bottom|right"
                android:paddingBottom="@dimen/personItem_text_bottom_offset"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/spotInfo_contentArea_left_offset"
    android:paddingRight="@dimen/spotInfo_contentArea_right_offset"
    android:paddingTop="@dimen/spotInfo_details_vertical_offset"
    android:paddingBottom="@dimen/spotInfo_details_vertical_offset">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Title"
        android:id="@+id/spotInfo_detailItem_title"
        android:textSize="@dimen/spotInfo_text_smallTitle_size"
        android:textColor="@color/blackColor" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spotInfo_detailItem_layout_value">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Text value"
                android:id="@+id/spotInfo_detailItem_value"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/spotInfo_details_textSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spotInfo_detailItem_image_phone"
                android:background="@drawable/ic_call_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/spotInfo_detailItem_layout_value2"
            android:visibility="gone"
            android:layout_marginTop="@dimen/spotInfo_details_phone_offset">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Text value"
                android:id="@+id/spotInfo_detailItem_value2"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/spotInfo_details_textSize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:background="@drawable/ic_call_black_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textAppearance">@style/MyTextAppearanceMedium</item>
        <item name="android:textAppearanceLarge">@style/MyTextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/MyTextAppearanceMedium</item>
        <item name="android:textAppearanceSmall">@style/MyTextAppearanceSmall</item>
        <item name="textAppearanceLargePopupMenu">@style/MyPopupMenuTextAppearance</item>
        <item name="textAppearanceSmallPopupMenu">@style/MyPopupMenuTextAppearance</item>

    </style>

    <style name="MyTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/textLargeSize</item>
    </style>
    <style name="MyTextAppearanceMedium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/textMediumSize</item>
    </style>
    <style name="MyTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/textSmallSize</item>
    </style>

    <!-- OverFlow menu Styles -->
    <style name="MyPopupMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
    </style>

    <style name="ClusterIcon.TextAppearance" parent="android:TextAppearance">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PersonProfile_TitleBlock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editprofile_title_text_size</item>
        <item name="android:layout_marginBottom">@dimen/editprofile_title_top_offset</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@color/transparentColor</item>
    </style>

    <style name="PersonProfile_Block">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_floating_material_light</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
    </style>


    <style name="EditProfile_TitleBlock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/editprofile_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/editprofile_title_top_offset</item>
        <item name="android:layout_marginLeft">@dimen/editprofile_title_left_offset</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@color/transparentColor</item>
    </style>

    <style name="EditProfile_Block">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_floating_material_light</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:divider">@drawable/property_line_gray</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="EditProfile_TxtPropField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/textMediumSize</item>
        <item name="android:layout_marginTop">@dimen/editprofile_text_top_offset</item>
        <item name="android:layout_marginBottom">@dimen/editprofile_text_bottom_offset</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">left</item>
        <item name="android:background">@color/transparentColor</item>

    </style>

</resources>
